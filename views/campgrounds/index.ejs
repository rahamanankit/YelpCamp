<%- include("../partials/header") %>

	<!-- Create a header jumbotron using Bootstrap -->
	<header class="jumbotron">
		<div class="container">
			<h1>
				Welcome to YelpCamp!
			</h1>
			<p>
				View our hand-picked campgrounds from all over the world
			</p>
			<p>
				<a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
			</p>	
		</div>
	</header>
	<!-- Here the style tag is used to keep the grid intact even when images are of diff height and width -->
	<div class="row text-center" style="display:flex; flex-wrap:wrap;">
		<% campgrounds.forEach(function(campground){ %>
		<!-- 2 images per row in smaller pages and 4 images per row in medium page -->
		<div class="col-md-3 col-sm-6">
			<!-- Create a grid of images -->
			<div class="thumbnail">
				<img src="<%= campground.image %>">
				<!-- Add caption to all the images -->
				<div class="caption">
					<h4>
						<%= campground.name %>
					</h4>	
				</div>
				<p>
					<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
				</p>
			</div>
		</div>
		<% }); %>
	</div>	
	

<%- include("../partials/footer") %>