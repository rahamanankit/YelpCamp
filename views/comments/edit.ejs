<%- include("../partials/header") %>

	<div class="row">
		<h1 style="text-align: center;">
			Edit Comment
		</h1>
		<!-- To make the input fields only reach to 30% width of the parent -->
		<div style="width: 30%; margin:25px auto">
			<form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id%>?_method=PUT" method="POST">
				<!-- form-group groups the input and provides a little space between them -->
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>">
				</div>
				<!-- <div class="form-group">
					<input class="form-control" type="text" name="comments[author]" placeholder="author">
				</div> -->
				<div class="form-group">
					<!-- btn-block class makes the button take up the width of the inputs -->
					<button class="btn btn-lg btn-primary btn-block">
						Submit!
					</button>	
				</div>		
			</form>
			<a href="/campgrounds" style>Go Back</a>	
		</div>
	</div>	


<%- include("../partials/footer") %>